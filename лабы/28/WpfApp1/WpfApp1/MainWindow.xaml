<Window x:Class="WpfInkCanvasExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InkCanvas with Grid" Height="450" Width="600">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <ToolBar Grid.Row="0">
            <RadioButton x:Name="inkRadio" Content="Ink Mode!" GroupName="EditMode" Checked="RadioButtonClicked"/>
            <RadioButton Content="Erase Mode!" GroupName="EditMode" Checked="RadioButtonClicked"/>
            <RadioButton Content="Select Mode!" GroupName="EditMode" Checked="RadioButtonClicked"/>
        </ToolBar>

        <InkCanvas x:Name="MyInkCanvas" Grid.Row="1" Background="#FFB6F4F1"/>
    </Grid>
</Window>